<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Danh mục ca sĩ</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Artist" asp-action="Add" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Thêm ca sĩ
            </a>
        </div>
    </div>
</div>
<table class="table table-striped table-bordered align-middle" style="width: 100%">
    <thead>
        <tr class="text-center fw-bold">
            <td style="width:140px" >Ảnh</td>
            <td>Tên</td>
            <td></td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var artist in Model)
        {
            <tr class="text-center">
                <td style="width:140px" >
                    <img src="@artist.Avatar" class="rounded-circle" alt="@artist.Name" style="width:75px;height:75px">
                </td>
                <td>
                    @artist.Name
                </td>
                <td>
                    <a class="btn btn-link" asp-action="UpdateShirt" asp-controller="Shirts" asp-route-shirtId="">
                        Edit
                    </a>
                </td>
                <td>
                    <a class="btn btn-link" asp-action="DeleteShirt" asp-controller="Shirts" asp-route-shirtId="">
                        Delete
                    </a>
                </td>
            </tr>
            
        }
    </tbody>
</table>